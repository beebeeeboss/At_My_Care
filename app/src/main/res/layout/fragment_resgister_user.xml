<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ResgisterUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight=".2"
            tools:ignore="ImageContrastCheck"
            tools:src="@tools:sample/avatars" />

        <Spinner
            android:id="@+id/registerUser"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:popupBackground="@android:color/white"
            android:spinnerMode="dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:flow_horizontalBias="50"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFullName"
            android:layout_width="358dp"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:backgroundTint="#B9A999C6"
            android:gravity="center"
            android:hint="Full Name"

            android:maxLength="100"
            android:paddingHorizontal="40dp"
            android:paddingVertical="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/imageView3"
            app:layout_constraintStart_toStartOf="@id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="358dp"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:backgroundTint="#B9A999C6"
            android:gravity="center"
            android:hint="E-mail"
            android:inputType="number"
            android:maxLength="100"
            android:paddingHorizontal="40dp"
            android:paddingVertical="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNumber"
            android:layout_width="358dp"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:backgroundTint="#B9A999C6"
            android:gravity="center"
            android:hint="Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:paddingHorizontal="40dp"
            android:paddingVertical="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAdress"
            android:layout_width="358dp"
            android:layout_height="0dp"
            android:layout_weight=".4"

            android:backgroundTint="#B9A999C6"
            android:gravity="center|clip_vertical"
            android:hint="Address"
            android:maxLength="250"
            android:paddingHorizontal="40dp"
            android:paddingVertical="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:checked="true"
            android:text="I'm in for emails wit exciting discounts and personalized recommendations" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegisterMe"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:background="@drawable/custom_btn_otp"
            android:backgroundTint="#D84C4C"
            android:paddingHorizontal="20sp"
            android:paddingVertical="20sp"
            android:text="Register Me"
            android:textColor="#673AB7"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etAdress"
            app:layout_constraintVertical_bias="0.154" />


    </LinearLayout>
</FrameLayout>