<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvHealthBlog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    app:cardCornerRadius="14dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvHealthBlogImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="14dp"
            app:cardPreventCornerOverlap="true">

            <ImageView
                android:id="@+id/ivHealthBlog"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:scaleType="fitXY"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/tvSmallTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="3"
                android:fontFamily="@font/lato"
                android:text="Small Title"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvHealthBlogLikes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:text="0 Likes"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvHealthBlogBigTiltle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/timmana"
            android:gravity="center"
            android:text="Big Title"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvHealthBlogDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/lato"
            android:maxLines="2"
            android:text="Description......."
            android:textSize="16sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>